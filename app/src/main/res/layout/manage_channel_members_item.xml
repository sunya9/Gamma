<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/margin_regular">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/channelMemberAvatarImageView"
        android:layout_width="@dimen/size_avatar_mini"
        android:layout_height="@dimen/size_avatar_mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        app:shapeAppearance="@style/RoundedShape"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/channelMemberUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_regular"
        app:layout_constraintStart_toEndOf="@id/channelMemberAvatarImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/channelMemberNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/channelMemberUsernameTextView"
        app:layout_constraintTop_toBottomOf="@id/channelMemberUsernameTextView"
        tools:text="@tools:sample/lorem[1]" />
</androidx.constraintlayout.widget.ConstraintLayout>