<resources>
    <!-- Base application theme. --><style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
    <item name="tabStyle">@style/Tab</item>
    <item name="toolbarStyle">@style/Toolbar</item>
    <item name="android:windowBackground">@color/colorWindowBackground</item>
    <item name="materialButtonStyle">@style/Button</item>
    <item name="colorError">@color/colorError</item>
    <item name="materialCardViewStyle">@style/CardStyle</item>
    <item name="colorControlHighlight">@color/colorGrayLight</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:textAppearance">@style/TextAppearance</item>
    <item name="android:statusBarColor">@color/colorStatusBar</item>
    <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
</style>

    <style name="AppTheme.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="colorControlHighlight">@color/colorGrayLight</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">999dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">999dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/colorGray</item>
    </style>

    <style name="expandTitleTextAppearance" parent="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BorderlessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:clipToPadding">false</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BorderlessButton.ComposeBottomIcon">
        <item name="android:inset">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
    </style>
</resources>
