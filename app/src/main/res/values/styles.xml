<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorGrayLight</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButtonStyle</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="colorError">@color/colorError</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle</item>
        <item name="colorControlNormal">@color/toolbarIcon</item>
        <item name="tabStyle">@style/TabStyle</item>
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:fragmentSharedElementEnterTransition">@transition/image_shared_element_transition</item>
        <item name="android:fragmentSharedElementReturnTransition">@transition/image_shared_element_transition</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="textInputStyle">@style/TextInputStyle</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!--widget style-->
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@style/DefaultWindowAnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>

    <style name="DefaultWindowAnimationStyle" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
    </style>

    <style name="SplashWindowAnimationStyle" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.WithToolbar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!--        <item name="android:windowTranslucentStatus">false</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:statusBarColor">@color/colorGray</item>-->
    </style>

    <style name="AppTheme.PhotoView">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPhotoViewBackground</item>
    </style>

    <style name="BottomSheetAdditionalStyle">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="tint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ExtendedFloatingActionButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/toolbarBg</item>
    </style>

    <style name="Toolbar.Up">
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <style name="ProfileToolbar">
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle.Profile</item>
        <item name="actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/toolbarIcon</item>
    </style>

    <style name="ToolbarNavigationButtonStyle.Profile">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">999dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="BaseSplashTheme" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/colorGray</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowAnimationStyle">@style/SplashWindowAnimationStyle</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="BaseSplashTheme" />

    <style name="BaseShareTHeme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Share" parent="BaseShareTHeme" />

    <style name="BorderlessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:clipToPadding">false</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/toolbarIcon</item>
    </style>

    <style name="BaseFullScreenDialogStyle" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:textColorSecondary">@color/colorGrayLight</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButtonStyle</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="colorError">@color/colorError</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle</item>
        <item name="colorControlNormal">@color/toolbarIcon</item>
        <item name="tabStyle">@style/TabStyle</item>
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle</item>
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
        <item name="android:textAppearance">@style/TextAppearance</item>
        <!--        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>-->
        <!--        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>-->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:fragmentSharedElementEnterTransition">
            @transition/image_shared_element_transition
        </item>
        <item name="android:fragmentSharedElementReturnTransition">
            @transition/image_shared_element_transition
        </item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="textInputStyle">@style/TextInputStyle</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--widget style-->
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--        <item name="android:windowIsTranslucent">false</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
    </style>

    <style name="FullScreenDialogStyle" parent="BaseFullScreenDialogStyle" />

    <style name="NavigationDrawerStyle">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextButton.Square" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="MaterialAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorGrayLight</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingActionButtonStyle</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="colorError">@color/colorError</item>
        <item name="materialCardViewStyle">@style/CardStyle</item>
        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle</item>
        <item name="colorControlNormal">@color/toolbarIcon</item>
        <item name="tabStyle">@style/TabStyle</item>
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:fragmentSharedElementEnterTransition">@transition/image_shared_element_transition</item>
        <item name="android:fragmentSharedElementReturnTransition">@transition/image_shared_element_transition</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="textInputStyle">@style/TextInputStyle</item>
        <!--widget style-->
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/toolbarBg</item>
        <item name="tabIndicator">@drawable/shape_tab_indicator</item>
    </style>

    <style name="AppBarLayoutStyle" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/toolbarBg</item>
    </style>

    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/toolbarBg</item>
    </style>
</resources>
